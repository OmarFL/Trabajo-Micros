#ifndef SRC_LECTORADC_H_
#define SRC_LECTORADC_H_

class LectorADC {
	float grados = 0.0f;
	float potencia = 0.0f;
	uint16_t ADC_val[2] = 0 ;
	ADC_HandleTypeDef hadc1;
public:
	LectorADC();
	void actualiza(); //acultaliza el valor de grados y potencia
	float getGrados();
	float getPotencia();
	virtual ~LectorADC();
};

#endif /* SRC_LECTORADC_H_ */
